<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Get CRUD</title>

</head>

<body>
    <div class="container">
        <div class="row justify-content-md-center">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Email</th>
                        <th scope="col">First name</th>
                        <th scope="col">Last name</th>
                        <th scope="col">Address</th>
                        <th scope="col">Phone number</th>
                        <th scope="col">Gender</th>
                        <!-- <th scope="col">Image</th>
                        <th scope="col">Role</th>
                        <th scope="col">Position</th> -->
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <% for(let i=0; i < dataTable.length; i++) { %>
                    <tbody>
                        <tr>
                            <td>
                                <%= dataTable[i].id %>
                            </td>
                            <td>
                                <%= dataTable[i].email %>
                            </td>
                            <td>
                                <%= dataTable[i].firstName %>
                            </td>
                            <td>
                                <%= dataTable[i].lastName %>
                            </td>
                            <td>
                                <%= dataTable[i].address %>
                            </td>
                            <td>
                                <%= dataTable[i].phoneNumber %>
                            </td>
                            <td>
                                <%= dataTable[i].gender %>
                            </td>
                            <!-- <td>
                                <%= dataTable[i].image %>
                            </td> -->
                            <!-- <td>
                                <%= dataTable[i].roleId %>
                            </td> -->
                            <!-- <td>
                                <%= dataTable[i].positionId %>
                            </td> -->
                            <td>
                                <a href="/edit-crud?id=<%= dataTable[i].id %>" type="button"
                                    class="btn btn-warning">Edit</a>
                                <a href="/delete-crud?id=<%= dataTable[i].id %>" type="button"
                                    class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    </tbody>
                    <% } %>
            </table>
        </div>
    </div>
</body>

</html>